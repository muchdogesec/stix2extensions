{
	"$id": "https://raw.githubusercontent.com/muchdogesec/stix2extensions/main/schemas/scos/phone-number.json",
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "phone-number",
	"description": "This extension creates a new SCO that can be used to represent phone numbers.",
	"type": "object",
	"allOf": [
		{
			"$ref": "https://raw.githubusercontent.com/oasis-open/cti-stix2-json-schemas/master/schemas/common/cyber-observable-core.json"
		},
		{
			"properties": {
				"type": {
					"type": "string",
					"description": "The value of this property MUST be `phone-number`.",
					"enum": ["phone-number"]
				},
				"id": {
					"type": "string",
					"pattern": "^phone-number--",
					"examples": ["phone-number--60bc3ff5-37c4-5b5a-9aeb-6c4d116534bd"]
				},
				"value": {
					"type": "string",
					"description": "An E.164 formatted phone number.",
					"examples": ["4407890129093"]
				},
				"country": {
					"type": "string",
					"description": "Three letter ISO (ISO-3166-1 alpha-3) country code the number was issues. Should match intentional dialing prefix in number.",
					"examples": ["GBR"]
				},
				"connection" : {
					"type": "string",
					"description": "The type of connection the number resolves to.",
					"enum": [
						"mobile",
						"landline"
					]
				},
				"provider": {
					"type": "string",
					"description": "The company that manages the number.",
					"examples": ["Big Network"]
				},
				"extensions": {
					"type": "object",
					"properties": {
						"extension-definition--14a97ee2-e666-5ada-a6bd-b7177f79e211": {
							"type": "object",
							"properties": {
								"extension_type": {
									"enum": ["new-sco"]
								}
							},
							"required": ["extension_type"]
						}
					},
					"required": ["extension-definition--14a97ee2-e666-5ada-a6bd-b7177f79e211"]
				}
			}
		}
	],
	"required": [
		"type",
		"id",
		"extensions"
	]
}