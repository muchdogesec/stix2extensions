{
	"$id": "https://raw.githubusercontent.com/muchdogesec/stix2extensions/main/schemas/scos/bank-account.json",
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "bank-account",
	"description": "This extension creates a new SCO that can be used to represent bank account details.",
	"type": "object",
	"allOf": [
		{
			"$ref": "https://raw.githubusercontent.com/oasis-open/cti-stix2-json-schemas/master/schemas/common/cyber-observable-core.json"
		},
		{
			"properties": {
				"type": {
					"type": "string",
					"description": "The value of this property MUST be `bank-account`.",
					"enum": ["bank-account"]
				},
				"id": {
					"type": "string",
					"pattern": "^bank-account--",
					"examples": ["bank-account--fb76b7b8-8701-5d8b-a143-0283847f6638"]
				},

				"country_ref": {
					"type": "string",
					"pattern": "^location--",
					"description": "Defines the STIX ID Location of the account.",
					"examples": ["GBR"]
				},
				"issuer_ref": {
					"type": "string",
					"pattern": "^identity--",
					"description": "Defines the STIX ID Identity object of the issuer",
					"examples": ["identity--9bef1584-289b-41fe-81b4-a5d72b7746d6"]
				},
				"holder_ref": {
					"type": "string",
					"pattern": "^identity--",
					"description": "Defines the STIX ID Identity object of the holder",
					"examples": ["identity--9fcd0db9-8115-4e33-ae00-674806395cf1"]
				},
				"currency": {
					"type": "string",
					"description": "3 letter ISO (ISO 4217) currency code for currency of account.",
					"examples": ["GBP"]
				},
				"iban": {
					"type": "string",
					"description": "Full IBAN number of the account.",
					"examples": ["GB33BUKB20201555555555"]
				},
				"bic": {
					"type": "string",
					"description": "Full BIC (aka SWIFT) code of the account.",
					"examples": ["DEMOGB22XXX"]
				},
				"account_number": {
					"type": "string",
					"description": "The account number.",
					"examples": ["88888888"]
				},
				"extensions": {
					"type": "object",
					"properties": {
						"extension-definition--f19f3291-6a84-5674-b311-d75a925d5bd9": {
							"type": "object",
							"properties": {
								"extension_type": {
									"enum": ["new-sco"]
								}
							},
							"required": ["extension_type"]
						}
					},
					"required": ["extension-definition--f19f3291-6a84-5674-b311-d75a925d5bd9"]
				}
			}
		}
	],
	"required": [	
		"type",
		"id",
		"extensions"
  	]
}