{
	"$id": "https://raw.githubusercontent.com/muchdogesec/stix2extensions/main/schemas/scos/payment-card.json",
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "payment-card",
	"description": "This extension creates a new SCO that can be used to represent different types of payment card.",
	"type": "object",
	"allOf": [
		{
			"$ref": "https://raw.githubusercontent.com/oasis-open/cti-stix2-json-schemas/master/schemas/common/cyber-observable-core.json"
		},
		{
			"properties": {
				"type": {
					"type": "string",
					"description": "The value of this property MUST be `payment-card`.",
					"enum": ["payment-card"]
				},
				"id": {
					"type": "string",
					"pattern": "^payment-card--",
					"examples": [""]
				},
				"format": {
					"type": "string",
					"description": "The type of card.",
					"enum": [
						"credit",
						"debit",
						"prepaid"
					]
				},
				"value": {
					"type": "number",
					"description": "Full card number.",
					"examples": ["4242424242424242"]
				},
				"scheme": {
					"type": "string",
					"description": "Card scheme.",
					"examples": ["VISA"]
				},
				"brand": {
					"type": "string",
					"description": "Card brand.",
					"examples": ["VISA"]
				},
				"currency": {
					"type": "string",
					"description": "3 letter currency code for card currency.",
					"examples": ["GBP"]
				},
				"issuer_ref": {
					"type": "string",
					"pattern": "^identity--",
					"description": "Defines the STIX ID Identity object of the issuer",
					"examples": ["identity--9bef1584-289b-41fe-81b4-a5d72b7746d6"]
				},
				"holder_ref": {
					"type": "string",
					"pattern": "^identity--",
					"description": "Defines the STIX ID Identity object of the holder",
					"examples": ["identity--9fcd0db9-8115-4e33-ae00-674806395cf1"]
				},
				"start_date": {
					"type": "date-time",
					"description": "The valid from date on the card in datetime format.",
					"examples": ["1999-01-01T00:00:00Z"]
				},
				"expiration_date": {
					"type": "date-time",
					"description": "The expiration on the card in datetime format.",
					"examples": ["000-01-02T23:59:59Z"]
				},
				"security_code": {
					"type": "string",
					"description": "The cards security code. Usually 3 or 4 digits.",
					"examples": ["999"]
				},
				"level": {
					"type": "string",
					"description": "Card level describes the issuers classification. For example, classic level often refers to a basic or introductory level card with no monthly fees.",
					"examples": ["CLASSIC"]
				},
				"is_commercial": {
					"type": "boolean",
					"description": "If the card is registered for commercial use (vs. personal use).",
					"examples": [false]
				},
				"is_prepaid": {
					"type": "boolean",
					"description": "If the card is prepaid.",
					"examples": [false]
				},
				"extensions": {
					"type": "object",
					"properties": {
						"extension-definition--7922f91a-ee77-58a5-8217-321ce6a2d6e0": {
							"type": "object",
							"properties": {
								"extension_type": {
									"enum": ["new-sco"]
								}
							},
							"required": ["extension_type"]
						}
					},
					"required": ["extension-definition--7922f91a-ee77-58a5-8217-321ce6a2d6e0"]
				}
			}
		}
	],
	"required": [
		"type",
		"id",
		"extensions"
	]
}