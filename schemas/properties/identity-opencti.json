{
	"$id": "https://raw.githubusercontent.com/muchdogesec/stix2extensions/main/schemas/properties/identity-sigma-rule.json",
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "identity-sigma-rule",
	"description": "This extension adds new properties to Identity SDOs to capture OpenCTI specific data.",
	"type": "object",
	"allOf": [
		{
			"$ref": "https://raw.githubusercontent.com/oasis-open/cti-stix2-json-schemas/master/schemas/sdos/identity.json"
		},
		{
			"properties": {
				"extensions": {
					"type": "object",
					"properties": {
						"extension-definition--": {
							"type": "object",
							"properties": {
								"extension_type": {
									"enum": [
										"toplevel-property-extension"
									]
								}
							},
							"required": ["extension_type"]
						}
					},
					"required": ["extension-definition--"]
				},
				"x_opencti_aliases": {
					"type": "array",
					"description": "A list of aliases used by OpenCTI",
					"items": {
						"type": "string"
						},
					"examples": [["Agriculture", "Agribusiness", "Food Production", "Nutritional Supplements"]]
				}
			}
		}
	]
}