                    "title": "Id",
                    "type": "string"
                },
                "format": {
                    "description": "The type of card.",
                    "enum": [
                        "credit",
                        "debit",
                        "prepaid"
                    ],
                    "title": "Format",
                    "type": "string"
                },
                "value": {
                    "description": "Full card number.",
                    "examples": [
                        "4111111111111111",
                        "4242424242424242"
                    ],
                    "title": "Value",
                    "type": "string"
                },
                "scheme": {
                    "description": "Card scheme or network",
                    "examples": [
                        "VISA",
                        "MASTERCARD",
                        "AMEX"
                    ],
                    "title": "Scheme",
                    "type": "string"
                },
                "brand": {
                    "description": "Card brand or product name",
                    "examples": [
                        "VISA",
                        "MASTERCARD",
                        "AMEX"
                    ],
                    "title": "Brand",
                    "type": "string"
                },
                "currency": {
                    "description": "3 letter ISO (ISO 4217) currency code for currency card is denominated in.",
                    "examples": [
                        "USD",
                        "EUR",
                        "GBP"
                    ],
                    "title": "Currency",
                    "type": "string"
                },
                "issuer_ref": {
                    "description": "STIX Identity reference to the issuing financial institution",
                    "examples": [
                        "identity--9bef1584-289b-41fe-81b4-a5d72b7746d6"
                    ],
                    "pattern": "^(identity)--[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
                    "title": "Issuer Ref",
                    "type": "string"
                },
                "holder_ref": {
                    "description": "STIX identity eference to the cardholder identity",
                    "examples": [
                        "identity--9fcd0db9-8115-4e33-ae00-674806395cf1"
                    ],
                    "pattern": "^(identity)--[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
                    "title": "Holder Ref",
                    "type": "string"
                },
                "start_date": {
                    "$ref": "https://raw.githubusercontent.com/oasis-open/cti-stix2-json-schemas/master/schemas/common/timestamp.json",
