                    "required": [
                        "extension-definition--b160c6ee-26b6-591c-8885-c192db67cac9"
                    ],
                    "type": "object"
                }
            }
        }
    ],
    "description": "This extension creates a new SCO that can be used to represent different types of payment card.",
    "required": [
        "type",
        "id",
        "value",
        "extensions"
    ],
    "title": "payment-card",
    "type": "object"
}