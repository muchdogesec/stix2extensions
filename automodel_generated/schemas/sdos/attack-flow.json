                    "title": "Start Refs",
                    "type": "array"
                },
                "revoked": {
                    "examples": [
                        false
                    ],
                    "title": "Revoked",
                    "type": "boolean"
                },
                "labels": {
                    "items": {
                        "type": "string"
                    },
                    "title": "Labels",
                    "type": "array"
                },
                "confidence": {
                    "title": "Confidence",
                    "type": "integer"
                },
                "lang": {
                    "title": "Lang",
                    "type": "string"
                }
            }
        }
    ],
    "required": [
        "type",
        "id",
        "name",
        "scope"
    ],
    "title": "attack-flow",
    "type": "object"
