{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "allOf": [
        {
            "$ref": "https://github.com/oasis-open/cti-stix2-json-schemas/raw/refs/heads/master/schemas/common/core.json"
        },
        {
            "properties": {
                "type": {
                    "const": "attack-flow",
                    "examples": [
                        "attack-flow"
